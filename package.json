{
  "name": "webrtc-server",
  "version": "0.1.0",
  "description": "A minimal WebRTC signaling server scaffold using WebSocket and Node.js (yarn)",
  "main": "src/index.js",
  "scripts": {
    "start": "cross-env ENABLE_SFU=1 node src/index.js",
    "start:dev": "cross-env ENABLE_SFU=1 nodemon src/index.js",
    "start:withauth": "cross-env ENABLE_SFU=1 ENABLE_AUTH=1 node src/index.js",
    "start:withoutauth": "cross-env ENABLE_SFU=1 ENABLE_AUTH=0 node src/index.js",
    "start:sfu": "cross-env ENABLE_SFU=1 node src/index.js",
    "build:ui": "node scripts/build-ui.js",
    "ui": "yarn build:ui && node scripts/ui-server.js",
    "ui-react:dev": "yarn --cwd ui-react dev",
    "ui-react:build": "yarn --cwd ui-react build",
    "ui-react:preview": "yarn --cwd ui-react preview",
    "start:recorder": "node recorder-service/src/index.js",
    "start:recorder:dev": "nodemon recorder-service/src/index.js"
  },
  "keywords": [
    "webrtc",
    "signaling",
    "websocket",
    "yarn",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "mediasoup": "^3.19.7",
    "mediasoup-client": "^3.6.85",
    "node-fetch": "^2.6.7",
    "uuid": "^9.0.0",
    "ws": "^8.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.12",
    "jest": "^29.0.0",
    "nodemon": "^2.0.0"
  }
}
